{
  "name": "gospaceranger",
  "version": "0.0.1",
  "author": "Ionic Framework",
  "homepage": "https://ionicframework.com/",
  "scripts": {
    "client:ng": "ng",
    "client:start": "ng serve",
    "client:build": "ng build",
    "client:test": "ng test",
    "client:lint": "ng lint",
    "client:e2e": "ng e2e",
    "server:build": "tsc -p ./src/server/tsconfig.build.json",
    "preserver:build": "rimraf dist/server",
    "server:format": "prettier --write \"src/server/app/**/*.ts\"",
    "server:start": "ts-node -r tsconfig-paths/register src/server/app/main.ts",
    "server:start:dev": "nodemon --config ./src/server/nodemon.json",
    "server:start:debug": "nodemon --config ./src/server/nodemon-debug.json",
    "preserver:start:prod": "rimraf dist/server && npm run server:build",
    "server:start:prod": "node dist/server/main.js",
    "dev": "concurrently \" ionic serve \" \" npm run server:start:debug \" "
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^7.2.2",
    "@angular/core": "^7.2.2",
    "@angular/forms": "^7.2.2",
    "@angular/http": "^7.2.2",
    "@angular/platform-browser": "^7.2.2",
    "@angular/platform-browser-dynamic": "^7.2.2",
    "@angular/router": "^7.2.2",
    "@ionic-native/core": "^5.0.0",
    "@ionic-native/splash-screen": "^5.0.0",
    "@ionic-native/status-bar": "^5.0.0",
    "@ionic/angular": "^4.1.0",
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/platform-express": "^6.0.0",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "core-js": "^2.5.4",
    "lodash": "^4.17.11",
    "lowdb": "^1.0.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "~6.3.3",
    "zone.js": "~0.8.29"
  },
  "devDependencies": {
    "@angular-devkit/architect": "~0.12.3",
    "@angular-devkit/build-angular": "~0.13.0",
    "@angular-devkit/core": "~7.2.3",
    "@angular-devkit/schematics": "~7.2.3",
    "@angular/cli": "~7.3.1",
    "@angular/compiler": "~7.2.2",
    "@angular/compiler-cli": "~7.2.2",
    "@angular/language-service": "~7.2.2",
    "@ionic/angular-toolkit": "~1.4.0",
    "@nestjs/cli": "^6.3.0",
    "@nestjs/testing": "^6.0.0",
    "@types/express": "^4.16.0",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/lowdb": "^1.0.7",
    "@types/node": "~10.14.2",
    "@types/supertest": "^2.0.7",
    "codelyzer": "~4.5.0",
    "concurrently": "^4.1.0",
    "ionic": "^4.12.0",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "jest": "^23.6.0",
    "karma": "~3.1.4",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "nest": "^0.1.6",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "protractor": "~5.4.0",
    "supertest": "^3.4.1",
    "ts-jest": "^23.10.5",
    "ts-node": "~8.0.0",
    "tsconfig-paths": "^3.7.0",
    "tslint": "~5.12.0",
    "typescript": "~3.1.6"
  },
  "description": "An Ionic project",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src/server",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
